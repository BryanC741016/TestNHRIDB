@model  NHRIDB.Models.ViewModels.PlanEdit

@{
    ViewBag.Title = "編輯代號";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Plan", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="text-danger">
        @Html.ValidationSummary()
    </div>
    <div class="formPanel">
        @Html.HiddenFor(e => e.planKey)

        @Html.LabelFor(e => e.planKey)
        @Html.DisplayFor(e => e.planKey)

        @Html.LabelFor(e => e.planName)
        @Html.TextBoxFor(e => e.planName, new { @class = "form-control" })
        @Html.LabelFor(e => e.Remark)
        @Html.TextBoxFor(e => e.Remark, new { @class = "form-control" })
    </div>

    <a class="btn" href="@Url.Action("Index")">放棄</a>
    <button class="btn" type="submit">儲存</button>
}

