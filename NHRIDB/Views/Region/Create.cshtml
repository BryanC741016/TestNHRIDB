@model NHRIDB.Models.ViewModels.RegionCreateModel
@{
    ViewBag.Title = Model.type.Equals("Create")? "新增器官/部位": "修改器官/部位";
}

@using (Html.BeginForm(Model.type, "Region", FormMethod.Post))
{

    @Html.AntiForgeryToken()
<div class="text-danger">
    @Html.ValidationSummary()
    
    @Html.HiddenFor(e => e.type)
</div>

<div class="formPanel">


    <label>編號</label>
    @if (Model.type.Equals("Create"))
    {
        @Html.TextBoxFor(e => e.rKey, new { @class = "form-control" })
    }
    else
    {
        <span>@Model.rKey</span>
        @Html.HiddenFor(e => e.rKey)
    }


    <label>英文名稱</label>
    @Html.TextBoxFor(e => e.name_en, new { @class = "form-control" })


    <label>中文名稱</label>
    @Html.TextBoxFor(e => e.name_tw, new { @class = "form-control" })


</div>
    <a class="btn" href="@Url.Action("Index", "Region")">取消</a>
    <button class="btn" type="submit">儲存</button>
}
